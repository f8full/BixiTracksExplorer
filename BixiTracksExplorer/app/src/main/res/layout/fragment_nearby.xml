<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udem.ift2906.bixitracksexplorer.NearbyFragment"
    android:id="@+id/nearbyFragmentLayout">

    <!-- MAP -->
    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/mapNearby"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="6"/>



    <!-- VIEW HOLDER FOR STATION LIST AND STATION INFO -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="4">

        <LinearLayout
            android:id="@+id/stationList"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <!-- COLUMN DESCRIPTION -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#BBDEFB">

            <TextView
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="@string/distance"
                android:layout_weight="0.18"
                android:ellipsize="end"
                android:singleLine="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/station"
                android:layout_weight="0.66"
                android:ellipsize="end"
                android:singleLine="true"

                />

            <TextView
                android:id="@+id/bikesOrParkingColumn"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:textSize="16sp"
                android:gravity="center"
                android:text="@string/bikes"
                android:layout_weight="0.18"
                android:textStyle="bold"
                />


        </LinearLayout>
        <!-- STATION LIST -->
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/stationListView"/>
         </LinearLayout>

        <!-- STATION INFO -->
        <LinearLayout
            android:id="@+id/stationInfo"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/stationInfo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:textSize="@dimen/abc_text_size_title_material"/>
                <TextView
                    android:id="@+id/stationInfo_bikeAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:textSize="@dimen/abc_text_size_title_material"/>
                <TextView
                    android:id="@+id/stationInfo_parkingAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:textSize="@dimen/abc_text_size_title_material"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/arrowImage"
                    android:src="@drawable/direction_arrow"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top"
                    android:rotation="0"/>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:background="@color/background_material_dark">
        <TextView
            android:id="@+id/lastUpdated_textView"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/lastUpdated"/>

        <ImageButton
            android:id="@+id/refreshDatabase_button"
            android:src="@drawable/ic_action_refresh"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:padding="1px"
            android:clickable="true"
            android:layout_gravity="right"
            />

    </LinearLayout>
</LinearLayout>

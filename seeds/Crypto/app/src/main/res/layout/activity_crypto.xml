<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crypto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ludoscity.seeds.crypto.CryptoActivity">

    <Button
        android:text="Gen KEYS"
        android:layout_width="129dp"
        android:layout_height="64dp"
        android:id="@+id/generateKeys"
        app:layout_constraintLeft_toLeftOf="@+id/activity_crypto"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_crypto"
        android:layout_marginTop="16dp" />



    <TextView
        android:text="None"
        android:layout_width="336dp"
        android:layout_height="408dp"
        android:id="@+id/secretKey"
        app:layout_constraintLeft_toLeftOf="@+id/activity_crypto"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/generateKeys" />

</android.support.constraint.ConstraintLayout>
